<div id="keyboard-shortcuts-modal-wrapper">
  <div id="keyboard-shortcuts-modal" class="modal" tabindex="-1">
    <div class="modal-contents">
      <div class="modal-header">
        <div class="modal-title">{{ useTranslation "Keyboard Shortcuts" translations }}</div>
        <div class="modal-close">Ã—</div>
      </div>
      <div class="modal-body">
        {{#each shortcuts}}
          {{#if this.description}}
            <dl class="shortcut-row">
              <dt class="shortcut-keys">
                {{#if this.displayAs}}
                  {{{this.displayAs}}}
                {{else}}
                  <kbd>{{this.name}}</kbd>
                {{/if}}
              </dt>
              <dd class="shortcut-description">
                {{ useTranslation this.description ../translations }}
              </dd>
            </dl>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
